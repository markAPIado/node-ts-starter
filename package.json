{
  "name": "node-ts-starter",
  "version": "1.0.0",
  "description": "This is a Node Js starter template with Typescript",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npx nodemon",
    "build": "rimraf ./dist && tsc",
    "start": "node dist/index.js",
    "clean": "rimraf ./dist",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "run-script-os",
    "format:win32": "prettier --config .prettierrc \"./src/**/*.ts\" --write",
    "format:darwin:linux": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "format:default": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "format-check": "run-script-os",
    "format-check:win32": "prettier --config .prettierrc \"./src/**/*.ts\" --check",
    "format-check:darwin:linux": "prettier --config .prettierrc 'src/**/*.ts' --check",
    "format-check:default": "prettier --config .prettierrc 'src/**/*.ts' --check",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "prepare": "husky install"
  },
  "keywords": [
    "NodeJs",
    "Typescript",
    "Starter",
    "Template",
    "Boilerplate",
    "NodeJs Starter"
  ],
  "author": "Mark Apiado",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.7.1",
    "@types/supertest": "^2.0.13",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "run-script-os": "^1.1.6",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint",
      "pre-push": "npm test"
    }
  }
}
